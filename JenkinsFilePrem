pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post{
                success{
                    echo 'Now Archieving ... '
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage ('Deploy to Staging'){
            steps {
                build job: 'deploy-to-stage-step2'
            }
        }
    }
}
